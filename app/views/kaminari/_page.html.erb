<% if page.current? %>
  <li class="page-item active">
    <%= content_tag :a, page, data: { remote: remote }, rel: page.rel, class: 'page-link' %>
  </li>
<% else %>
  <li class="page-item <%= 'active' if page.current? %>">
    <%= link_to page, url, class: "page-link", rel: page.rel %>
  </li>
<% end %>
