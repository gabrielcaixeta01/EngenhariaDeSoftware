<li class="page-item">
  <% disabled = current_page.first? %>
  <li class="page-item <%= 'disabled' if disabled %>">
    <% label = raw(t('views.pagination.previous', default: 'â€¹ Prev')) %>
    <% if disabled %>
      <span class="page-link" aria-hidden="true"><%= label %></span>
    <% else %>
      <%= link_to label, url, class: "page-link", rel: "prev", aria: { label: "Previous" } %>
    <% end %>
  </li>
</li>
